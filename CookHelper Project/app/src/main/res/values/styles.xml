<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorMainAccentDark</item>
        <item name="colorAccent">@color/colorMainAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Standard Styles for general use -->

    <style name="StandardBody">
        <item name="android:textSize">@dimen/standard_font</item>
    </style>

    <style name="StandardTitle">
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <!-- Styles for Help menu -->

    <style name="HelpBodyStyle">
        <item name="android:textSize">@dimen/help_content_font_size</item>
        <item name="android:textColor">@color/helpFont</item>
    </style>

    <style name="HelpTitleStyle">
        <item name="android:textSize">@dimen/help_title_font_size</item>
        <item name="android:textColor">@color/helpFont</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
